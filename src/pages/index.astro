---
import { callGetStaticPaths } from 'astro/dist/core/render/route-cache'
import ArrowIcon from '../icons/ArrowIcon.astro'
import CopyIcon from '../icons/CopyIcon.astro'
import '../styles/global.css'

const options = [
  'Include Uppercase Letters',
  'Include Lowercase Letters',
  'Include Numbers',
  'Include Symbols'
]

const strengthLevel = () => {
  const leves = {
    toWeak: 1,
    weak: 2,
    medium: 3,
    strong: 4
  }

  const emptySquare = '‚¨õÔ∏è'
  const fillSquare = 'üü©'

  for (let item in [1, 2, 3, 4]) {
